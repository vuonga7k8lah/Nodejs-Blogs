<div class="mt-3">
  <div class="row">
    {{#each course}}
    <div class="col-3">
      <div class="card" style="width: 18rem;">
        <a href="/courses/{{this.slug}}">
          <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}" style="width: 250px;height: 300px;">
        </a>
        <div class="card-body">
          <a href="/courses/{{this.slug}}" style="text-decoration:none ;">
            <h5 class="card-title">{{this.name}}</h5>
          </a>
          <p class="card-text">{{this.description}}</p>
          <a href="#" class="btn btn-primary">Chốt Đơn</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>